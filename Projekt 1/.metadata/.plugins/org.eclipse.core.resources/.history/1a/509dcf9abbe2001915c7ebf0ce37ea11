package hardware;

public class Memory {

  private Word[] memory;

  public Memory(int size, WordFactory wordFactory) {
    this.memory = new Word[size];

    if (size < 1) {
      throw new IllegalArgumentException("Allocated memory too small.");
    }

    for (int i = 0; i < size; i++) {
      memory[i] = wordFactory.word("0");
    }
  }

  public Word getWord(int memoryIndex) {
    if (memoryIndex < 1 || index > size) {

    }
    return memory[memoryIndex];
  }
}
