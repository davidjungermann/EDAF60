package implementation;

import hardware.Instruction;
import hardware.Memory;
import hardware.ProgramCounter;
import hardware.Word;

public abstract class BinOp implements Instruction {
  private Operand left;
  private Operand right;
  private Operand address;

  public BinOp(Operand addressWord, Operand left, Operand right) {
    this.left = left;
    this.right = right;
    //this.address = addressWord;
  }

  public void execute(Memory memory, ProgramCounter pc) {
    op(address.getWord(memory), left.getWord(memory), right.getWord(memory));
  }

  protected abstract void op(Word addressWord, Word left, Word right);
  
}
